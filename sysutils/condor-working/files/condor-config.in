#!/bin/sh -e

if [ -z $EDITOR ]; then
    EDITOR=vi
    export EDITOR
fi

if [ ! -e %%PREFIX%%/etc/condor_config ]; then
    cp %%PREFIX%%/etc/condor/condor_config %%PREFIX%%/etc
fi

if [ ! -e %%PREFIX%%/etc/condor_config.local ]; then
    cp %%PREFIX%%/etc/condor/condor_config.local %%PREFIX%%/etc
fi

$EDITOR %%PREFIX%%/etc/condor_config.local

printf "Restart HTCondor? (y/[n]) "
read restart

if [ 0$restart = 0y ]; then
    service condor stop
    printf "\nCondor processes running after stop:\n\n"
    ps ax | grep condor

    service condor start
    # FIXME: Embed this in rc script restart?
    sleep 5
    printf "\nCondor processes running after start:\n\n"
    ps ax | grep condor
fi
