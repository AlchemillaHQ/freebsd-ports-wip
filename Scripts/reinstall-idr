#!/bin/sh -e

##########################################################################
#   Main
##########################################################################

# FreeBSD ports
set +e
pkg delete -y py34-idr
set -e
pkg install -y python3
wip-update
for pkg in math/py-idr; do
    cd /usr/wip/$pkg
    make clean clean-depends
    make -DBATCH install
    make package
    cd ../..
done

